# SmartAI 环境变量配置示例
# 复制此文件为 .env 并填入适当的值

# 核心配置
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
API_KEY=your-api-key-here

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/smartai
REDIS_URL=redis://localhost:6379
DB_POOL_SIZE=10
CACHE_TTL=3600

# 区块链节点配置
ETH_RPC_URL=https://mainnet.infura.io/v3/your-api-key
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# 通知配置
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
SLACK_CHANNEL=#alerts
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/xxx
DINGTALK_WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=xxx
NOTIFICATION_LEVEL=high

# 风险分析配置
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_MEDIUM=0.5
RISK_THRESHOLD_LOW=0.3
ML_MODEL_PATH=./models/risk-model.pkl

# 管道配置
PIPELINE_BATCH_SIZE=100
PIPELINE_CONCURRENCY=5
PIPELINE_RETRY_COUNT=3
PIPELINE_TIMEOUT_MS=30000

# 高级配置
ENABLE_CONFIG_RELOAD=false
DEBUG_CONFIG=false 